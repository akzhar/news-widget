@font-face
	font-family 'Ubuntu-Regular'
	font-weight normal
	font-style normal
	font-display swap
	src: url('../fonts/Ubuntu-Regular.woff2') format('woff2'),
		 url('../fonts/Ubuntu-Regular.woff') format('woff')

html, body
	margin 0
	height 100%
	font-family 'Ubuntu-Regular', Arial, sans-serif
	font-size 16px
	line-height 1em

.main
	padding 25px

	h1
		margin 0 0 25px 0

	p
		margin 0

	svg 
		width 1rem
		height 1rem
		fill #540EAD