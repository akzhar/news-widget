.btn-close
	position absolute
	top 10px
	right 10px
	width 1.4rem
	height 1.4rem
	border none
	background-color transparent

	&:hover
		cursor pointer

		&::before,
		&::after
			background-color color__main

	&:active
		transform translateY(2px)
		opacity 0.8

	&::before,
	&::after
		content ''
		position absolute
		width 1.4rem
		height 0.2rem
		background-color color__main--light

	&::before
		top 0.6rem
		transform translate(-50%, 0) rotate(-45deg)
		
	&::after
		bottom 0.6rem
		transform translate(-50%, 0) rotate(45deg)