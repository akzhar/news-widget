random(min, max)
  return floor(math(0, 'random')*(max - min + 1) + min)

bounds()
  background rgba(random(1, 255), random(1, 255), random(1, 255), 0.3)
  outline 1px solid rgb(random(1, 255), random(1, 255), random(1, 255))

hide()
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip rect(0 0 0 0)
  overflow hidden

animation-shake(d)
  @keyframes shake
    to,
    9%,
    from
      transform translate3d(0, 0, 0)
    1%,
    3%,
    5%,
    7%
      transform translate3d(-2px, 0, 0)
    2%,
    4%,
    6%,
    8%
      transform translate3d(2px, 0, 0)
  
  animation-name shake
  animation-delay 1s
  animation-duration 1s * d
  animation-iteration-count infinite